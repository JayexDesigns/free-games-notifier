{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "free-games-notifier",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
	  "notification": {
		"all": true
	  }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.free-games-notifier.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/512x512.png",
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Free Games Notifier",
        "width": 800,
        "height": 500,
		"minWidth": 600,
		"minHeight": 200
      }
    ],
	"systemTray": {
		"iconPath": "icons/icon.png",
		"iconAsTemplate": false
	}
  }
}
